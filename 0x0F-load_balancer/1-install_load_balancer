#!/usr/bin/env bash
# Install and configure HAproxy on lb server
sudo apt-get update;
sudo apt-get install haproxy -y;

content="\

frontend http_front
  bind *:80
  mode http
  default_backend http_back

backend http_back
  balance roundrobin
  server web-01 3.90.84.154:80 check
  server web-02 35.174.204.42:80 check
"
echo "$content" | sudo tee -a "/etc/haproxy/haproxy.cfg" > /dev/null

sudo service haproxy restart
